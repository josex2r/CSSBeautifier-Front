{{#ripple-animation}}
  {{#paper-item}}
    {{#paper-tile-left}}
      <div class="flip">
        <div class="card">
          <div class="face front unknown-icon"></div>
          <div class="face back loading-icon"></div>
        </div>
      </div>
    {{/paper-tile-left}}

    {{#paper-tile-content}}
      <h3>{{t "label.cssFile"}}</h3>
      <h4>ID: {{item.id}}</h4>
      <p>
        URL: {{item.url}}
      </p>
    {{/paper-tile-content}}

    {{#paper-tile-left classNames="md-tile-right"}}
      {{#paper-button action="toggleData"}}
        {{#if isLoading}}
          {{fa-icon "spinner" size="lg" spin=true}}
        {{else}}
          {{fa-icon "search" size="lg"}}
        {{/if}}
      {{/paper-button}}
    {{/paper-tile-left}}
  {{/paper-item}}
{{/ripple-animation}}

{{#if isLoading}}
  {{animated-progress-bar}}
{{/if}}

{{#if isActive}}
  {{#view "slide-show-view"}}
    <div class="btn-group btn-group-justified divider both" role="group">
      <div class="btn-group" role="group" {{action "openCssData" "original"}}>
        {{#paper-button classNames="md-primary btn" raised=true}}
          {{t "btn.original"}}
        {{/paper-button}}
      </div>

      <div class="btn-group" role="group" {{action "openCssData" "originalCompressed"}}>
        {{#paper-button classNames="md-primary btn" raised=true}}
          {{t "btn.originalCompressed"}}
        {{/paper-button}}
      </div>

      <div class="btn-group" role="group" {{action "openCssData" "beauty"}}>
        {{#paper-button classNames="md-primary btn" raised=true}}
          {{t "btn.beauty"}}
        {{/paper-button}}
      </div>

      <div class="btn-group" role="group" {{action "openCssData" "beautyCompressed"}}>
        {{#paper-button classNames="md-primary btn" raised=true}}
          {{t "btn.beautyCompressed"}}
        {{/paper-button}}
      </div>
    </div>
  {{/view}}
{{/if}}

{{paper-divider inset=true classNames="both"}}
